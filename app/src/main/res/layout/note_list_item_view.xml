<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:background="@drawable/ripple"
        android:orientation="vertical">

        <TextView
            android:id="@+id/note_title_tv__note_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/delete_note_button__note_list_item"
            android:text="Note Title"
            android:textColor="#494949"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/note_preview_tv__note_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#B5B5B5"
            android:layout_alignRight="@+id/note_title_tv__note_list_item"
            android:layout_below="@+id/note_title_tv__note_list_item"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Note content preview" />

        <ImageButton
            android:id="@+id/delete_note_button__note_list_item"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_delete_black_24dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>