<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/note_title_tv__note_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/delete_note_button__note_list_item"
        android:text="Note Title" />

    <TextView
        android:id="@+id/note_preview_tv__note_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/note_title_tv__note_list_item"
        android:maxLines="4"
        android:layout_below="@+id/note_title_tv__note_list_item"
        android:text="Note content preview" />

    <ImageButton
        android:id="@+id/delete_note_button__note_list_item"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_delete_black_24dp" />

</RelativeLayout>